{
  "name": "fightbackplatform",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-cache-inmemory": "1.5.1",
    "apollo-client": "2.5.1",
    "apollo-link": "1.2.11",
    "apollo-link-rest": "0.7.2",
    "apollo-link-retry": "2.2.13",
    "graphql": "14.2.1",
    "graphql-anywhere": "4.2.1",
    "graphql-tag": "2.10.1",
    "p-throttle": "3.1.0",
    "react": "16.8.6",
    "react-apollo": "2.5.5",
    "react-apollo-hooks": "0.4.5",
    "react-dom": "16.8.6",
    "react-scripts": "3.0.0",
    "rebass": "3.1.0",
    "styled-components": "4.2.0",
    "styled-system": "4.1.0"
  },
  "scripts": {
    "upgrade-check": "yarn upgrade-interactive --latest",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cypress run",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "format": "prettier --list-different --write \"*/**/*.{ts,tsx,js,jsx,json,html,css}\"",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-hooks",
      "cypress",
      "chai-friendly",
      "prettier"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    }
  },
  "babelMacros": {
    "styledComponents": {
      "ssr": true
    }
  },
  "prettier": {
    "singleQuote": false,
    "jsxBracketSameLine": false,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "{src,cypress}/**/*.{ts,tsx,js,jsx,json,html,css}": [
      "prettier --list-different --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/preset-react": "7.0.0",
    "@cypress/webpack-preprocessor": "4.0.3",
    "@storybook/addon-actions": "5.0.10",
    "@storybook/addon-knobs": "5.0.10",
    "@storybook/addon-links": "5.0.10",
    "@storybook/addon-viewport": "5.0.10",
    "@storybook/addons": "5.0.10",
    "@storybook/react": "5.0.10",
    "babel-loader": "8.0.5",
    "babel-plugin-macros": "2.5.1",
    "cypress": "3.2.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-chai-friendly": "0.4.1",
    "eslint-plugin-cypress": "2.2.1",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
