{
  "functions": {
    "source": "cloud_functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": [
    {
      "target": "production",
      "public": "hosting/production_community",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/downloads/**",
          "destination": "/downloads/**"
        }
      ]
    },
    {
      "target": "staging",
      "public": "hosting/staging_platform",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/downloads/**",
          "destination": "/downloads/**"
        }

      ]
    }
  ]
}
